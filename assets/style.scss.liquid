// GO TO TOP BUTTON
$p3: 1rem;
$p1: $p3 * 0.25;
$p2: $p3 * 0.5;
$p4: $p3 * 1.5;
$p5: $p3 * 2;
.top-button {
  background-color: $color_top_button_bg;
  border: none;
  bottom: $p5;
  cursor: pointer;
  display: inline-block;
  opacity: 0;
  visibility: hidden;
  padding: 2px 11px 6px;
  right: $p3 * 1.8;
  position: fixed;
  z-index: 100;

  &:hover,
  &.scrolling {
    opacity: 0.9;
    transition: opacity 0.1s ease-in-out;
  }

  &.active {
    cursor: pointer;
    opacity: 1;
    transition: all 0.25s ease-in-out;
    visibility: visible;
  }

  .top-button__icon {
    font-size: 11px;
    color: $color-white;
  }

  .top-button--bottom {
    background-color: $color-white;
    transition: all 0.1s ease-in-out;
    .top-button {
      .top-button__icon {
        color: $color_top_button_bg;
      }
    }
  }
}

/**** MEDIA QUERIES ****/

@media all and (min-width: 1950px) {
  #shopping-bag {
    width: 500px !important;
  }
}

// laptops
@media all and (max-width: 1200px) {
  .header-banner {
    .header-banner-social__item-count {
      display: none;
    }
    .header-banner-search {
      .search-input {
        width: 90%;
      }
    }
  }
}

@media all and (max-width: 992px) {
  .header-banner {
    .header-banner-left {
      .navbar-toggler {
        display: inline-block;
      }
      .header-banner-social__item {
        display: none;
      }
      .header-banner-search {
        display: none !important;
      }
    }

    // .collapse-section{
    //     display: none;
    // }
  }

  .header-nav {
    display: none;
  }

  .navbar-collapsable {
    background: $primaryColor;
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    padding: 0 15px 15px 15px;
    width: 100% !important;
    // height: 100%;
    display: none;
    overflow-y: scroll;

    .collapsed-nav-search {
      display: block !important;
      width: 150%;
      position: absolute;
      top: 10px;
    }
    .nav-collapse-mobile-close-icon {
      display: block !important;
      position: fixed;
    }
  }

  .menu {
    flex-direction: column;
    align-items: flex-start !important;
    padding: 20px 0 0 20px;
    margin-top: 80px;
    .menu-link {
      margin-bottom: 20px;
    }
  }

  .header-jumbo-menu {
    width: 100%;
    z-index: 100;
  }

  .collapse-img-primary {
    display: none;
  }
}

@media all and (max-width: 768px) {
  .header-banner-right {
    .header-banner-right__item {
      font-size: 16px;
    }
  }
}

@media all and (max-width: 576px) {
  .header-banner-right {
    .banner-count {
      display: none;
    }
  }

  .collapse-img {
    display: none;
  }

  .announcement-text {
    font-size: 12px;
  }

  .footer__bottom {
    .newsletter-input {
      width: 75%;
    }
  }
}

@media all and (max-width: 460px) {
  .header-banner-right {
    .header-banner-right__item {
      font-size: 14px;
    }
  }
}

@media all and (max-width: 400px) {
  .header-banner-left {
    flex: 0 0 16.666667%;
    max-width: 10% !important;

    .navbar-toggler {
      font-size: 14px;
    }
  }

  .header-banner-logo {
    .navbar-brand {
      font-size: 32px !important;
    }
  }

  .header-banner-right {
    .header-banner-right__item {
      font-size: 12px;
    }
  }

  .collapsed-nav-search {
    padding-left: 0px !important;

    .search-input {
      width: 50% !important;
    }
  }
}

