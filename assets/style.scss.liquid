.header-jumbo-menu {
  background: $navJumboMenuBgColor;
  position: absolute;
  left: 0;
  z-index: 1;
  width: 100%;
  margin-top: 8px;
  // display: none;
  visibility: hidden;
  opacity: 0;
  box-shadow: 0 20px 20px -5px $navJumboMenuShadowColor;
  transition: all 0.4s ease-in-out;
  transform: translate(0, 20px);

  .header-jumbo__pad {
    padding: 30px;

    .jumbo-menu-item {
      margin-bottom: 10px;

      .jumbo-menu-link {
        color: $navJumboMenuTextColor;
        font-family: "Montserrat";
        font-size: 14px;
        text-transform: capitalize;
        &:hover {
          color: $navJumboMenuTextHoverColor;
        }
      }
    }

    .jumbo-menu-heading {
      font-weight: 700;
      .uppercase {
        text-transform: uppercase;
      }
    }

    .jumbo-menu-img {
      cursor: pointer;

      img {
        height: 275px;
      }
    }
    .collection-title {
      cursor: pointer;
    }
  }

  img {
    object-fit: cover;
    object-position: center;
  }

  a {
    color: $primaryColor;
    &:hover {
      color: $primary_hover;
    }
  }
}

.show {
  display: block !important;
}

