      }
      &.header-cart {
        color: $primaryTextColor;
        &:hover {
          color: $primaryTextHoverColor;
        }
      }
    }

    .shopping-bag-section {
      display: none;
      // background: white;
      // color: black;
      position: fixed;
      top: 0;
      right: 0;
      bottom: 0;
      padding: 0 15px 15px 15px;
      width: 390px !important;
      font-family: $primaryFont;
      overflow: hidden;
      z-index: 110;
      box-shadow: 0 20px 20px -5px $navJumboMenuShadowColor;
      transition: all .5s ease-in-out;      
      transform: translateX(100%);
      visibility: hidden;
      
      &.show{
        transform: translateX(0);
        visibility: visible;
      }

      .shopping-cart-close__icon {
        display: block !important;
        font-size: 25px;
        color: grey;
        position: absolute;
        left: 0;
        padding: 10px 20px;
        cursor: pointer;
        &:hover {
          color: black;
        }
      }

      .shopping-cart-heading {
        margin-top: 15px;
        text-align: center;
        text-transform: capitalize;
      }
      hr {
        margin-top: 20px;
      }

      .shopping-cart-items {
        font-size: 14px;
        overflow: scroll;
        height: 100%;
        padding-bottom: 250px;

        .shopping-cart-items__link {
          color: $primaryTextColor;

          &:hover {
            color: $primaryTextHoverColor;
          }
        }

        .shopping-cart-item {
          border-bottom: 1px solid $muteIconColors;
          color: $primaryTextColor;
          margin: 5px 0;
        }
        .item_info {
          margin-bottom: 5px;

          .item_info__edit {
            color:rgb(148, 148, 148);
          }
        }

        .shopping-cart-item__title {
          color: $muteIconColors;
          font-weight: 700;
        }

        .shopping-cart-item__price {
          color: red;
          text-transform: uppercase;

          .item_original_price {
            color: $muteIconColors;
            font-weight: 600;
          }

          .item_discount_price {
            font-size: 16px;
            font-weight: 600;
          }
        }

        .shopping-cart-item__quantity {
          color: $muteIconColors;
        }

        .shopping-cart-item__color {
          .item_color {
            // background: red;
            display: inline-block;
            position: relative;
            top: 2px;
            margin: 0 5px;
            border-radius: 50%;
            min-height: 12px;
            min-width: 12px;
          }
        }

        .item_adjust_count {
          .item_count {
            font-weight: 600;
          }

          .item_count_sub {
            font-size: 16px;
            color: $muteIconColors;
            &:hover {
              cursor: pointer;
              font-weight: 600;
              color: black;
            }
          }

          .item_count_add {
            font-size: 16px;
            color: $muteIconColors;
            &:hover {
              cursor: pointer;
              font-weight: 600;
              color: black;
            }
          }
        }

        .item_remove {
          color: $muteIconColors;
          text-decoration: underline;
          cursor: pointer;
          &:hover {
            color: black;
          }
        }
      }

      .shopping-cart-actions {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        width: 100%;
        z-index: 150;
        background: white;
        padding: 10px;

        .shopping-cart-total {
          margin-bottom: 10px;
          text-transform: capitalize;

          .shopping-cart-subtotal-amount {
            color: red;
            font-weight: 600;
          }
        }

        .shopping-cart__buttons {
          padding: 5px;
          text-align: center;
          margin-bottom: 10px;
          cursor: pointer;
        }

        .primary-action {
          background: black;
          color: white;
          display: flex;
          justify-content: center;
          &:hover {
            background: rgb(82, 80, 80);
          }
        }

        .secondary-action {
          background: white;
          color: black;
          border: 1px solid black;
        }
      }
    }
  }
}

