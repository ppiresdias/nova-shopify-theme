.blog {
  margin: 50px 0;
  .blog__pagination {
    text-align: center;
    margin-bottom: 4rem;

    hr {
      margin: auto;
      padding: 8px;
    }

    ul {
      li {
        margin: 0 10px;
        border: 1px solid gray;
        padding: 4px 12px;
        display: inline-block;
        cursor: pointer;

        a {
          color: black;
          text-decoration: none;
        }

        &:hover {
          border-color: lightblue;
        }
      }
    }
  }

  .blog__header {
    text-align: center;
    margin-bottom: 3rem;

    span {
      font-family: "Karla", sans-serif;
      font-style: normal;
      font-weight: 700;
      font-size: 40px;
      letter-spacing: 0.5px;
    }
  }
}
.cards {
  display: flex;

  @media screen and(max-width: 700px) {
    flex-direction: column;
    align-items: center;
  }

  .cards__row {
    margin-bottom: 2rem;
  }

  .left-column {
    min-width: 300px;
    margin-right: 5px;

    @media screen and(max-width: 700px) {
      margin-right: 0;
    }

    h4 {
      font-weight: 700;
      font-family: "Karla", sans-serif;
    }

    .search {
      border: 1px solid black;
      height: fit-content;
      width: 300px;

      :first-child {
        margin-left: 5px;
      }

      input {
        border: none;
        padding: 2px 0;

        ::placeholder {
          color: black;
        }
      }
    }

    .recent {
      text-align: center;
      padding: 1.5rem 0;
      border-bottom: 1px solid rgb(241, 241, 241);

      a {
        display: block;
        color: black;
        text-decoration: none;
        margin: 5px 0;
      }
    }

    .tags {
      text-align: center;

      margin: 1.5rem 0;

      a {
        text-decoration: none;
        float: left;
        padding: 5px;
        color: black;
        border: 0.5px solid lightgray;
        margin: 4px;
      }
    }
  }
}

.card {
  margin-bottom: 1.5rem;
  overflow: hidden;
  border: none;

  a {
    font-weight: 600;
    display: block;
    margin-top: 10px;
  }

  .card__title {
    font-family: "Prata", serif;
    font-size: 25px;
    font-weight: 400;
    line-height: 1.4rem;
    margin-top: 5px;
    margin-bottom: 15px;
  }

  .card__content {
    font-family: "Karla", sans-serif;
    font-style: normal;
    font-weight: 400;
    font-size: 14px;
    line-height: 1.6;
    word-break: break-word;
    text-align: left;
    color: gray;

    a {
      color: #212529;

      &:hover {
        color: blue;
      }
    }
  }

  .card__img {
    width: 100%;
    object-fit: cover;
    object-position: center;
    height: 290px;
  }

  .card__date {
    font-style: normal;
    font-weight: 500;
    font-size: 11px;
    text-transform: uppercase;
    margin-top: 15px;
    margin-bottom: 5px;
  }
}
/*============================================================================
  INSTAGRAM OUTFITS SECTION
==============================================================================*/

.instagram__posts {
  margin-bottom: 2rem;

  @media screen and (min-width: 1950px) {
    width: 60%;
    margin: 0 auto;
  }

  h2 {
    margin: 9rem 0;
    text-transform: uppercase;
    text-align: center;
    font-weight: bold;
    font-size: 2.5rem;
  }
  .row {
    cursor: pointer;
    .instagram__posts__card {
      margin: 0 0.5rem 0.5rem 0.5rem !important;
      position: relative;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      width: 400px;

      svg,
      a {
        display: none;
        position: absolute;
        z-index: 2;
      }
      a {
        top: 60%;
        padding: 0.7rem 2rem;
        text-transform: uppercase;
      }

      img {
        object-fit: cover;
        object-position: center;
        height: 30rem;
      }
    }
    div {
      &:hover {
        .instagram__posts__card__item {
          display: block;
        }
        &::before {
          background-color: rgba(0, 0, 0, 0.35);
          content: '';
          display: block;
          height: 100%;
          position: absolute;
          width: 100%;
          z-index: 1;
        }
      }
    }
  }
}

