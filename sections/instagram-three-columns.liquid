{%- assign collection = collections[section.settings.collection] -%}

<section class="instagram__posts">
  <h2>{{ section.settings.title }}</h2>
  <div class="d-flex flex-column">
    <div class="row no-gutters d-flex justify-content-center">
      {% for product in collection.products limit: 6 %}
        <div class="instagram__posts__card col-sm-12 col-md-3">
          <img loading="lazy" class="card-img-top" src="{{ product.featured_image | img_url: '500x' }}"/>
          <svg class="instagram__posts__card__item" height="25" viewbox="0 0 50 50" width="25">
            <path d="M42.032 17.238a12.946 12.946 0 0 0-.823-4.282 9.016 9.016 0 0 0-5.155-5.116 12.946 12.946 0 0 0-4.282-.823c-1.882-.157-2.48-.157-7.272-.157s-5.39 0-7.272.108a12.946 12.946 0 0 0-4.282.872 9.016 9.016 0 0 0-5.155 5.155 12.946 12.946 0 0 0-.823 4.282c-.108 1.843-.108 2.44-.108 7.223s0 5.39.108 7.272a12.946 12.946 0 0 0 .823 4.282 9.016 9.016 0 0 0 5.155 5.155 12.946 12.946 0 0 0 4.282.823c1.882.108 2.48.108 7.272.108s5.39 0 7.272-.108a12.946 12.946 0 0 0 4.282-.823 9.016 9.016 0 0 0 5.155-5.155 12.946 12.946 0 0 0 .823-4.282c.108-1.872.108-2.47.108-7.272s0-5.38-.108-7.262zm-3.175 14.396a9.8 9.8 0 0 1-.637 3.283 5.88 5.88 0 0 1-3.312 3.303 9.8 9.8 0 0 1-3.274.608c-1.862.088-2.42.107-7.124.107s-5.273 0-7.125-.107a9.8 9.8 0 0 1-3.293-.608 5.88 5.88 0 0 1-3.312-3.303 9.8 9.8 0 0 1-.608-3.273c-.088-1.862-.098-2.42-.098-7.124s0-5.273.098-7.125a9.8 9.8 0 0 1 .608-3.293 5.88 5.88 0 0 1 3.312-3.322 9.8 9.8 0 0 1 3.274-.608c1.862-.088 2.42-.098 7.124-.098s5.273 0 7.125.098a9.8 9.8 0 0 1 3.273.608 5.88 5.88 0 0 1 3.332 3.322 9.8 9.8 0 0 1 .608 3.273c.088 1.862.098 2.421.098 7.125s.02 5.282-.069 7.134zM24.5 15.68a8.82 8.82 0 1 0 8.82 8.82 8.82 8.82 0 0 0-8.82-8.82zm0 14.553a5.723 5.723 0 1 1 5.733-5.733 5.723 5.723 0 0 1-5.733 5.733zm8.82-16.758a2.205 2.205 0 1 0 2.215 2.205 2.205 2.205 0 0 0-2.215-2.205z" fill="#fff"></path>
          </svg>
          <a class="button--black instagram__posts__card__item  instagram__posts__card__item" href="{{ product.url }}">{{ section.settings.btn_text }}</a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}

{
  "name": "instagram_outfits",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Our instagram outfits",
      "label": "Section Title"
    }, {
      "type": "text",
      "id": "btn_text",
      "default": "Shop it",
      "label": "Button Text"
    }, {
      "id": "collection",
      "type": "collection",
      "label": "Featured Collection Images"
    }
  ],
  "presets": [
    {
      "name": "Instagram Posts",
      "category": "Collection"
    }
  ]
}

{% endschema %}
