    -webkit-line-clamp: 2;
    font-size: .95em;
    font-weight: 400;
    min-height: 49px;
    max-height: 49px;
    margin-bottom: $p1;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 100%;
  }
  .product-info__price {    
    @include ff();
    color: #000000;
    font-size: 1em;
    font-weight: 600;
    padding-bottom: $p1;
  }
  
  .product-info__button {
  }

  
