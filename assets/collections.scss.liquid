$primaryColor: rgb(59, 59, 59);

$spacer: 1rem;
$p1: $spacer*.25;
$p2: $spacer*.5;
$p3: $spacer;
$p4: $spacer*1.5;
$p5: $spacer*3;

// https://getbootstrap.com/docs/4.5/layout/overview/#responsive-breakpoints
// $breakpoint: ("lg": 1199.98px, "md": 991.98px, "sm": 767.98px, "xs": 575.98px);
$breakpoint-lg: 1199.98px;
$breakpoint-md: 991.98px;
$breakpoint-sm: 767.98px;
$breakpoint-xs: 575.98px;

$color-light: #f8f9fa;
$color-secondary: #6c757d;
// $color-dark: #292b2c;

$color-white: #ffffff;
$color-black: #000000;
$color_top_button_bg: #444444;
$font-default: proxima-nova-condensed, Arial, sans-serif;

// LEFT SIDE
$color_filter_bg: #ffffff;
$color_filter_header: #000000;
$color_filter_label: #53585f;

// RIGHT SIDE
$color_product_discount: rgb(227, 44, 43);
$color_product_title: #53585f;
$color_product_price: #53585f;
$color-swatch-border: #cacaca;
$color-photo-border: #edeff0;

// PRODUCT-INFO VARIABLES
$border-icon: 2px;
$color-heart-icon: rgb(225, 0, 0);
$padding-icon: 12px;
$size-icon-div: 40px;

@mixin flex_center() {
  align-items: center;
  display: flex;
  justify-content: center;
}

@mixin ff($font-family: $font-default) {
  font-family: $font-family;
}

@function px($size: $p3) {
  //Default font size on html element is 100%, equivalent to 16px;
  @return $size / $p3 * 16px;
}

@mixin bag_button_text() {
  @include ff();
  font-weight: 400;
  font-size: 14px;
  letter-spacing: 1px;
  text-transform: uppercase;
}

@mixin bag_button_hover() {
  background-color: #eeeff0;
  border: 1px solid $color-black;
  color: $color-black;
  transition: all .1s ease-in-out;
}

@mixin bag_button() {
  @include flex_center();
  background-color: $color-black;
  border: 1px solid $color-black;
  display: block;
  color: $color-white;
  padding: $p2 0;
  width: 100%;
}

// COLLECTIONS SECTION
#collections {
  color: $primaryColor;
  padding-bottom: 100px;

  .breadcrumbs {
    margin: 0 0 2em;
    padding: 10px 15px;

    .breadcrumbs__list {
      list-style-type: none;
      margin: 0;
      padding: 0;
    
      .breadcrumbs__item {
        display: inline-block;
        vertical-align: middle;
      
        &:first-child {
          .breadcrumbs__link {
            font-weight: 600;
            text-decoration: underline;
          }
        }
      
        &:not(:first-child) {
          .breadcrumbs__link {    
            font-weight: normal;
            text-decoration: none;
          }
        }
    
        &:not(:last-child):after {
          font-family: FontAwesome;
          content: "\f054"; // fa-chrevon-right
          font-size: 12px;
          display: inline-block;
          margin: 0 .5em;
        }
        
        .breadcrumbs__link:hover {
          text-decoration: underline;
        }
        
        .breadcrumbs__link[aria-current="page"]:hover {
          text-decoration: underline;
        }
      }
  }
  
  }

  .collections__container {
    position: relative;
    // padding: $p5 0;
  }

  .collections__modal {
    display: none;
  }

  .collections__header {
    font-weight: 600;
    margin-bottom: $p3*2.5;
    text-align: center;
  }

  .collections__description {
    margin: 0 auto $p3;
    width: 50%;
  }

  .collections__read-more {
    color: black;
    cursor: pointer;
    font-size: 13px;
    font-weight: 600;
    margin-bottom: $p5;
    text-align: center;
    text-decoration: underline;
  }

  .collections__search-filter {
    padding: 0;
  }


  $padding-y-bagModal: $p2;
  $padding-x-bagModal: $p3;

  .bag-modal {
    background-color: $color-white;
    border: 1px solid $color-photo-border;
    bottom: -$padding-y-bagModal;
    display: flex;
    flex-direction: column;
    left: -$padding-x-bagModal;
    max-height: 100%;
    opacity: 0;
    padding: $padding-y-bagModal $padding-x-bagModal;
    position: absolute;
    transition: all .5s ease-in-out;
    transition-property: opacity, visibility;
    visibility: hidden;
    width: calc(100% + 2*#{$padding-x-bagModal});
    z-index: 100;
    
    &.bag-modal--active {
      opacity: 1;
      visibility: visible;
    }

    .bag-modal__header-container {
      padding: $p3 0 $p2;
      position: relative;

      .bag-modal__close-icon {
        cursor: pointer;
        font-size: 20px;
        position: absolute;
        right: 0;
        top: 0;
      }

      .bag-modal__header {}
    }

    .bag-modal__select {
      overflow-y: auto;
      overflow-x: hidden;
    }
    
    .bag-modal__row {
      flex-grow: 1;
      text-transform: uppercase;

      &.bag-modal__row--titles {
        font-weight: bold;
        padding: 0 0 $p2;
        border-bottom: 1px solid $color-photo-border;
      }

      &.bag-modal__row--option {
        &.bag-modal__row--option--active {
          background-color: $color-light;
          // color: $color-light;
        }

        &[disabled="disabled"] {
          // color: $color-secondary;
          cursor: not-allowed;
          opacity: .3;
        }

        // &:not(:first-child):before {
        //   border-top: 1px solid $color-photo-border;
        //   content: "";
        //   margin-left: $padding-x-bagModal;
        //   // padding-top: $p3;
        //   width: calc(100% - 2*#{$padding-x-bagModal});
        // }
        // &:last-child {
        //   // padding-bottom: $p3;
        //   &:after {
        //     border-bottom: 1px solid $color-photo-border;
        //     content: "";
        //     margin-left: $padding-x-bagModal;
        //     margin-left: 0;
        //     padding-top: $p3;
        //     width: calc(100% - 2*#{$padding-x-bagModal});
        //   }
        // }
        border-bottom: 1px solid $color-photo-border;
        cursor: pointer;
        padding: $p3 0;
        // padding-bottom: $p3;

        &:not([disabled="disabled"]) {
          &:not([class~="bag-modal__row--option--active"]) {
            &:hover {
              color: red;
            }
          }
          &[class~="bag-modal__row--option--active"] {
            &:hover {
              color: $color-secondary;
            }
          }
        }
      }
    } //.bag-modal__options

    .bag-button {
      cursor: not-allowed;
      flex-grow: 1;
      @include bag_button_hover();
      .bag-button__text {
        @include bag_button_text();
      }

      &.bag-button--active {
        cursor: pointer;
        @include bag_button();
        // &:hover {
        //   @include bag_button_hover();
        // }   
      }  
    }
  } // .bag-modal
} // #collections

.gallery {
  padding: 0;

  .gallery__sorting {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 0 $p4;
  }

  .gallery__sorting-found {
  }
  .gallery__sorting-options {
  }

  .gallery__filter {
    align-items: center;
    display: none;
    justify-content: space-between;
    background-color: $color-white;
    border: 1px solid $color-black;
    cursor: pointer;
    padding: 12px 16px;
    text-transform: uppercase;
    height: 100%;
    width: 100%;
  }
  
  // DROPDOWN
  .gallery__dropdown-container {
    position: relative;
  }

  .gallery__dropdown-icon {
    position: absolute;
    right: px() + 13px;
    top: 50%;
    transform: translateY(-50%);
  }

  .gallery__dropdown {
    appearance: none;
    padding: 11px 13px;
    text-transform: uppercase;
    height: 100%;
    width: 100%;
  }
  
  // PICTURES SECTION
  .gallery__row {
    .gallery__column {
      margin-bottom: $p5;
      
      // PRODUCT CONTAINER
      .gallery__container {
        border: none !important;
        position: relative;

        // CAROUSEL, IMAGES, ICONS
        .gallery__image-container {
          border: 1px solid $color-photo-border;
          position: relative;
          overflow: hidden;
          width: 100%;

          // CAROUSEL HANDLER
          &.gallery__image-container--right {
            .gallery__icon {
              &.gallery__icon--arrow {
                &.gallery__icon--arrow--left {
                  opacity: 0;
                }
                &.gallery__icon--arrow--right{
                  opacity: 1;
                }
              }
            }
          }

          &.gallery__image-container--left {
            .gallery__carousel {
              transform: translateX(-50%);
            }
            .gallery__icon {
              &.gallery__icon--arrow {
                &.gallery__icon--arrow--left {
                  opacity: 1;
                }
                &.gallery__icon--arrow--right {
                  opacity: 0;
                }
              }
            }
          }

          // IMAGE CONTAINER / CAROUSEL
          .gallery__carousel {
            display: flex;
            width: 200%;
            transition: transform .35s ease-in-out;

            .gallery__image {
              cursor: pointer;
              width: 50%;
              height: auto;

              img {
                width: 100%;
                // object-fit: cover;
                // object-position: center;
              } // img
            } // .gallery__image
          } // .gallery__carousel
        
          .gallery__icon {
            @include flex_center();
            color: $color-black;
            cursor: pointer;
            height: $size-icon-div;
            position: absolute;
            width: $size-icon-div;
            z-index: 10;
        
            &.gallery__icon--heart {
              right: $border-icon;
              top: $border-icon;
        
              &.gallery__icon--heart--active {
                color: $color-heart-icon;
                transition: color .1s ease-in-out;
              }
        
              &:hover, &:active {
                color: $color-heart-icon;
                transition: color .1s ease-in-out;
              }
            }
        
            &.gallery__icon--arrow {
              top: 50%;
              transform: translateY(-50%);
              transition: opacity .25s ease-in-out;
              &.gallery__icon--arrow--left {
                left: $border-icon;  
              }
              &.gallery__icon--arrow--right {
                right: $border-icon;
              }
              &:hover, &:active {
                background-color: rgba(0, 0, 0, .4);
                color: rgba(255, 255, 255, 0.7);
                transition: all .05s ease-in-out;
              }
            }
          } // .gallery__icon
        } // .gallery__image-container
      } // .gallery__container
    } // .gallery__column
  } // .gallery__row
} // .gallery


