$primaryColor: rgb(59, 59, 59);

$spacer: 1rem;
$p1: $spacer*.25;
$p2: $spacer*.5;
$p3: $spacer;
$p4: $spacer*1.5;
$p5: $spacer*3;

// RIGHT SIDE
$color-white: #ffffff;
$color_product_discount: rgb(227, 44, 43);
$color_product_title: #53585f;
$color_product_price: #53585f;
$color-swatch-border: #cacaca;
$color-photo-border: #edeff0;
$size-swatch-outer-border: 4px;
$size-swatch: 18px;

@mixin flex_center() {
  align-items: center;
  display: flex;
  justify-content: center;
}

// TOP, BREADCRUMBS NAV
.breadcrumbs {
  margin: 0 0 2em;
  padding: 10px 15px;
}

.breadcrumbs__list {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

.breadcrumbs__item {
  display: inline-block;
  vertical-align: middle;

  &:first-child {
    .breadcrumbs__link {
      font-weight: 600;
      text-decoration: underline;
    }
  }

  &:not(:first-child) {
    .breadcrumbs__link {    
      font-weight: normal;
      text-decoration: none;
    }
  }
}

.breadcrumbs__item:not(:last-child):after {
  font-family: FontAwesome;
  content: "\f054"; // fa-chrevon-right
  font-size: 12px;
  display: inline-block;
  margin: 0 .5em;
}



.breadcrumbs__link:hover {
  text-decoration: underline;
}

.breadcrumbs__link[aria-current="page"]:hover {
  text-decoration: underline;
}


// COLLECITONS
.section-header {
  margin-bottom: 50px;
}

// COLLECTIONS SECTION
.collections {
  color: $primaryColor;
}

.collections__header {
  font-weight: 600;
  margin-bottom: $p3*2.5;
  text-align: center;
}

.collections__description {
  margin: 0 auto $p3;
  width: 50%;
}

// SORTING BAR
.filters-toolbar-wrapper {
  border: none;
}

.filters-toolbar {
  @include flex_center();
}

.sort-options {
  display: flex;
  // background-color: pink;
}

.filters-toolbar__product-count {
  font-style: normal;
}

.filters-toolbar__item-child {
  align-items: center;
  display: flex;
  justify-content: flex-end;
  &:first-child {
    margin: 0;
  }
  // background-color: red;
  // border: 1px solid black;
}

.filters-toolbar__item-wrapper {
  justify-content: space-between;
}

.filters-toolbar__input-wrapper {
  // padding: 0 10px;
}

.filters-toolbar__input {
  border: 1px solid black;
  height: 45px;
  text-transform: uppercase;
}

.swatch {
  $size: 18px;
  box-shadow: inset 0 0 0 1px $color-swatch-border;
  border-radius: 50%;
  cursor: pointer;
  height: $size;
  width: $size;
}

.swatch--first {
  margin-left: 4px;
}
.swatch--active {
  box-shadow: inset 0 0 0 1px rgb(119, 119, 119), 0 0 0 1px $color-white, 0 0 0 $size-swatch-outer-border $color-swatch-border;
}


.bag-button {
  @include flex_center();
  background-color: black;
  border: 1px solid black;
  display: block;
  color: white;
  padding: $p2 0;
  width: 100%;

  &:hover {
    background-color: #eeeff0;
    color: $primaryColor;
    transition: all .1s ease-in-out;
  }
}

.bag-button__text {
  font-weight: 400;
  font-size: 14px;
  letter-spacing: 1px;
  text-transform: uppercase;
}
.bag-button__icon {
  font-size: 12px;
  margin-left: 6px;
}
