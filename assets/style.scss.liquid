/*================ HEADER STYLES ================*/

.header-announcement-bar {
  background: $announcementBgColor;
  color: $announcementTextColor;
  font-family: $primaryFont;
  font-size: 14px;
  font-weight: 600;
  padding: 5px 0;
  display: none;
  .announcement-text {
    color: $announcementTextColor;

    span {
      color: $announcementTextColorEmphasis;
    }
  }
}

.header-banner {
  background: $primaryColor;
  color: $primaryTextColor;
  font-family: $primaryFont;
  font-size: 14px;

  .header-banner-left {
    .navbar-toggler {
      display: none;
      color: white;
      cursor: pointer;
    }
    .header-banner-socials {
      .header-banner-social__item {
        margin-right: 10px;
        cursor: pointer;
        .header-banner-social__item-count {
          font-size: 12px;
          margin-left: 5px;
        }
        &:hover {
          color: $primaryTextHoverColor;
        }
      }
    }

    .header-banner-search {
      padding-left: 30px;
      .search-btn {
        padding: 0;
        color: white;
      }
      .search-input {
        background: transparent;
        border: none;
        border-bottom: 1px solid white;
        border-radius: 0;
        font-family: $primaryFont;
        &::placeholder {
          color: $placeholderText;
          font-size: 12px;
        }
        &:focus {
          outline: white;
        }
      }
    }
  }

  .header-banner-logo {
    text-align: center;

    .navbar-brand {
      font-family: "Bebas Neue";
      font-size: 40px;
      color: $primaryTextColor !important;
      &:hover {
        color: $primaryTextColor !important;
      }
    }
  }

  .header-banner-right {
    font-size: 18px;

    .header-banner-right__item {
      margin-left: 15px;
      cursor: pointer;

      .banner-count {
        font-family: $primaryFont;
        font-size: 12px;
        margin-left: 5px;
      }
      &:hover {
        color: $primaryTextHoverColor;
      }
    }

    .shopping-bag-section {
      display: none;
      background: white;
      color: black;
      position: fixed;
      top: 0;
      right: 0;
      bottom: 0;
      padding: 0 15px 15px 15px;
      width: 390px !important;
      font-family: $primaryFont;
      overflow: hidden;
      z-index: 110;
      box-shadow: 0 20px 20px -5px $navJumboMenuShadowColor;

      .shopping-cart-close__icon {
        display: block !important;
        font-size: 25px;
        color: grey;
        position: absolute;
        left: 0;
        padding: 10px 20px;
        cursor: pointer;
        &:hover {
          color: black;
        }
      }

      .shopping-cart-heading {
        margin-top: 15px;
        text-align: center;
        text-transform: capitalize;
      }
      hr {
        margin-top: 20px;
      }

      .shopping-cart-items {
        font-size: 14px;
        overflow: scroll;
        height: 100%;
        padding-bottom: 250px;

        .shopping-cart-item {
          border-bottom: 1px solid $muteIconColors;
          margin: 5px 0;
        }
        .item_info {
          margin-bottom: 5px;
        }

        .shopping-cart-item__title {
          color: $muteIconColors;
        }

        .shopping-cart-item__price {
          color: red;
          text-transform: uppercase;

          .item_original_price {
            color: black;
            font-style: italic;
          }

          .item_discount_price {
            font-size: 16px;
            font-weight: 600;
          }
        }

        .shopping-cart-item__color {
          .item_color {
            background: red;
            display: inline-block;
            position: relative;
            top: 2px;
            margin: 0 5px;
            border-radius: 50%;
            min-height: 12px;
            min-width: 12px;
          }
        }

        .item_adjust_count {
          .item_count {
            font-weight: 600;
          }

          .item_count_sub {
            font-size: 16px;
            color: $muteIconColors;
            &:hover {
              cursor: pointer;
              font-weight: 600;
              color: black;
            }
          }

          .item_count_add {
            font-size: 16px;
            color: $muteIconColors;
            &:hover {
              cursor: pointer;
              font-weight: 600;
              color: black;
            }
          }
        }

        .item_remove {
          color: $muteIconColors;
          text-decoration: underline;
          cursor: pointer;
          &:hover {
            color: black;
          }
        }
      }

      .shopping-cart-actions {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        width: 100%;
        z-index: 150;
        background: white;
        padding: 10px;

        .shopping-cart-total {
          margin-bottom: 10px;
          text-transform: capitalize;

          .shopping-cart-subtotal-amount {
            color: red;
            font-weight: 600;
          }
        }

        .shopping-cart__buttons {
          padding: 5px;
          text-align: center;
          margin-bottom: 10px;
          cursor: pointer;
        }

        .primary-action {
          background: black;
          color: white;
          &:hover {
            background: rgb(82, 80, 80);
          }
        }

        .secondary-action {
          background: white;
          color: black;
          border: 1px solid black;
        }
      }
    }
  }
}

.header-nav {
  background: $navHeaderBgColor;
  color: $primaryTextColor;

  .collapsable {
    width: 100%;
    z-index: 100;
    .nav-collapse-mobile-close-icon {
      display: none;
      &:hover {
        color: $primaryTextHoverColor;
      }
    }
    .collapsed-nav-search {
      display: none;
      padding-left: 30px;
      .search-btn {
        padding: 0;
        color: white;
      }
      .search-input {
        background: transparent;
        border: none;
        border-bottom: 1px solid white;
        border-radius: 0;
        font-family: $primaryFont;
        width: 300px;

        &::placeholder {
          color: $placeholderText;
          font-size: 12px;
        }
        &:focus {
          outline: white;
        }
      }
    }
  }
  .nav-collapse-mobile-close-icon {
    font-size: 25px;
    position: absolute;
    right: 0;
    padding: 10px 20px;
    cursor: pointer;
  }
  .menu {
    width: 100%;
    margin-bottom: 0px;

    .menu-link {
      color: $primaryTextColor;
      font-family: $primaryFont;
      font-size: 14px;
      text-transform: uppercase;
      &:hover {
        color: $primaryTextHoverColor;
        cursor: pointer;
      }

      .fa-chevron-down {
        font-size: 12px;
      }
    }
  }
}

