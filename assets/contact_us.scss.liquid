// styles for contact us page
@import url("https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,600;0,700;1,500&display=swap");
/*
font-family: 'Montserrat', sans-serif;
*/

$x-small: 75px;
$medium: 767px;
$large: 775px;


@media screen and (min-width: $x-small){
  .contact__wrapper {
    background-image: url("{{ 'reachout-sml.jpg' | asset_img_url: '300x' }}");
    background-repeat: repeat;
    text-align: center;
    height: 580px;
    .contact__heading {
      font-family: 'Montserrat', sans-serif;
      font-weight: 800;
      color: white;
      padding-top: 40px;
      align-items: center;
    }
    .contact__subHeading {
      font-size: 48px;
      color: rgb(255, 0, 179);
      text-shadow: -10px 10px 2px rgba(52, 230, 221, 0.986);
    }
  }
  .contact__content {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 80px;
  }
  .contact__contentJoin {
    padding: 10px;
    text-align: center;
    line-height: 50px;
    margin-top: 10px;
    height: 580px;
    font-family: 'Montserrat', sans-serif;
    .contact__contentJoinH2 {
      padding: 10px;
      text-align: center;
      font-size: 42px;
    }
    .contact__contentJoinH4 {
      margin-top: 30px;
    }
    .contact__contentJoinButton {
      height: 50px;
      background-color: rgb(0, 0, 0);
      margin-top: 30px;
      font-weight: 600;
      color: white;
      align-items: center;
      justify-content: center;
      border: 1px solid black;
      display: block;
      padding: 0.5rem 0;
      width: 100%;
    }
  .contact__contentJoinButton:hover {
    background-color: rgb(141, 141, 141);
    color:rgb(0, 0, 0);
    cursor: pointer;
  }
  }
  .contact__formTitle{
      margin-top: 80px;
      text-align: center;
  }
  .contact__form {
    margin-top: 40px;
    font-family: 'Montserrat', sans-serif;
    text-align: left;
    margin-bottom: 80px;
    .contact__formGroup{
      margin-top: 15px;
      label{
        margin-bottom: -10px;
      }
    }
    
    .contact__formInput {
      height: 40px;
      margin-top: 10px;
    }
    .contact__formInputCom {
      height: 150px;
      margin-top: 10px;
    }
    .contact__formButton {
      background-color: rgb(0, 0, 0);
      height: 50px;
      background-color: rgb(0, 0, 0);
      margin-top: 30px;
      font-weight: 600;
      color: white;
      align-items: center;
      justify-content: center;
      border: 1px solid black;
      display: block;
      padding: 0.5rem 0;
      width: 100%;      
    }
    .contact__formButton:hover{
      background-color: rgb(141, 141, 141);
      color:rgb(0, 0, 0);
      cursor: pointer;
    }
    .contact__formCustomer{
        margin-top: 20px;
        text-align: center;
        padding: 80px;
    }
  
  }
}
  @media screen and (min-width: $medium){
    .contact__wrapper {
      height: 380px;
      .contact__heading {
        padding-top: 40px;
        align-items: center;
      }
      .contact__subHeading {
        font-size: 54px;
    }
    }
    .contact__contentJoin{
      margin-top: -30px;
      padding-top: 0px;
    }
  }
  