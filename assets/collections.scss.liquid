  @include bag_button();

  &:hover {
    @include bag_button_hover();
    i {
      $degrees: 180deg;
      transform: rotate($degrees);
      -webkit-transform: rotate($degrees);
      transition: transform .1s ease-in-out;
    }
  }

  .bag-button__text {
    @include bag_button_text();
  }
  .bag-button__icon {
    font-size: 12px;
    margin-left: 6px;
  }
}

